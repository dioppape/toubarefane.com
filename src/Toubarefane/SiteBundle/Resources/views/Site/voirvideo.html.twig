{# src/Sdz/BlogBundle/Resources/views/Blog/voir.html.twig #}

{% extends "ToubarefaneSiteBundle::layout.html.twig" %}

{% block title %}
  video - Voir {{ parent() }}
{% endblock %}

{% block toubarefanesite_body %}
  <article class="col-md-8 col-lg-8 col-xs-12 col-lg-offset-1">
       
       {% if video is not null %}
       {% set clef=video.embeded |slice(38,35)%}
       {% set url='<iframe class="ovideo img-responsive img-thumbnail" src="lien?rel=0&amp;autoplay=1&amp;controls=1"  frameborder="0" allowfullscreen></iframe>' %}
                       
                           {{ url | replace({'lien': clef}) | raw  }}<h3> <span class="glyphicon glyphicon-camera">{{ video.name}}</span></h3><p>{{ video.description}}</p>
                      
              <div id="suivre">
          <div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/fr_FR/sdk.js#xfbml=1&version=v2.0";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>
         
          <div class="fb-like" href="{{ path('toubarefanevideo_voir', {'id': video.id}) }}" data-layout="button_count" data-action="like" data-show-faces="true" data-share="true"></div>
           <div class="twitter"><script src="http://platform.twitter.com/widgets.js" type="text/javascript"></script>
<a href="http://www.toubarefane.com/accueil/video" class="twitter-share-button">Tweet</a>

</div>
           
            
    </div>
       {% endif %} 
       
  </article>    
  {% include "ToubarefaneSiteBundle:Site:videoaccueil.html.twig" %}
{% endblock %}