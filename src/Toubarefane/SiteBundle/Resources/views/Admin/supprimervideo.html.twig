{# src/Toubarefane/SiteBundle/Resources/views/Site/modifier.html.twig #}

{% extends "ToubarefaneSiteBundle::layoutAdmin.html.twig" %}

{% block title %}
  Suppprimer une video - {{ parent() }}
{% endblock %}

{% block toubarefanesite_body %}

    <h2>Supprimer une video</h2>

  <p>
    Etes-vous certain de vouloir supprimer la video "{{ video.name }}" ?
  </p>

  {# On met l'id de l'video dans la route de l'action du formulaire #}
  <form action="{{ path('toubarefaneadmin_supprimervideo', {'id': video.id}) }}" method="post">
    <a href="{{ path('toubarefaneadmin_tousvideo') }}" type="button" class="btn btn-info">
      <i class="icon-chevron-left"></i>
      Retour aux videos
    </a>
    <input type="submit" value="Supprimer" class="btn btn-danger" />
    {{ form_rest(form) }}
  </form>

{% endblock %}